<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/album_layout"
    android:padding="16dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <ImageView
        android:id="@+id/album_art_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        tools:src="@drawable/damn" />

    <TextView
        android:id="@+id/album_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/album_art_iv"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textSize="20sp"
        tools:text="DNA" />

    <TextView
        android:id="@+id/artist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/album_name_tv"
        android:layout_marginTop="3dp"
        android:textColor="#000000"
        android:textSize="15sp"
        tools:text="Kendrick Lamar" />

    <TextView
        android:id="@+id/album_songs_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/artist_tv"
        android:textColor="#000000"
        android:textSize="13sp"
        tools:text="12 songs" />


</RelativeLayout>