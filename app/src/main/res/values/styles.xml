<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryAlbums</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkAlbums</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="SongsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimarySongs</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkSongs</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="colorButtonNormal">@color/colorButtonSongs</item>
    </style>
    <style name="NowPlayingTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryPlayer</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPlayer</item>
        <item name="colorAccent">@color/colorSeekBar</item>
        <item name="colorButtonNormal">@color/colorButtonPlayer</item>
        <item name="android:fontFamily">@string/font</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

</resources>
